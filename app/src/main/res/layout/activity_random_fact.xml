<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screenRandomFact.RandomFactActivity">

    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_light"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/quote_left"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_chuck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_light"
            android:contentDescription="@string/chuck_norris_description"
            android:scaleType="fitEnd"
            android:src="@drawable/chuck_norris_image"
            app:layout_constraintBottom_toTopOf="@id/quote_left"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/quote_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/quote_description"
        android:src="@drawable/ic_quote"
        app:layout_constraintBottom_toTopOf="@+id/text_fact"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/text_fact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:text="@string/placeholder_fact"
        android:textSize="26sp"
        android:textStyle="italic"
        android:maxLines="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o" />

    <View
        android:id="@+id/view_separator"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_margin="16dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_fact" />

    <TextView
        android:id="@+id/text_chuck_norris_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/chuck_norris_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separator" />

    <ImageView
        android:id="@+id/quote_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/quote_description"
        android:src="@drawable/ic_quote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_fact" />

    <ImageView
        android:id="@+id/icon_update"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/update_description"
        android:src="@drawable/ic_update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/icon_search"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_chuck_norris_name"
        app:layout_constraintVertical_bias="0.385" />

    <ImageView
        android:id="@+id/icon_search"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/search_description"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/icon_share"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/icon_update"
        app:layout_constraintTop_toBottomOf="@+id/text_chuck_norris_name"
        app:layout_constraintVertical_bias="0.385" />


    <ImageView
        android:id="@+id/icon_share"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/share_description"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/icon_search"
        app:layout_constraintTop_toBottomOf="@+id/text_chuck_norris_name"
        app:layout_constraintVertical_bias="0.385" />

    <ProgressBar
        android:id="@+id/progress_loading_fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        app:layout_constraintBottom_toTopOf="@+id/view_separator"
        app:layout_constraintEnd_toEndOf="@+id/text_fact"
        app:layout_constraintStart_toStartOf="@+id/text_fact"
        app:layout_constraintTop_toTopOf="@+id/text_fact" />


</android.support.constraint.ConstraintLayout>